<div class="container-sm">
  <%= form_with(model: section, url: url) do |form| %>
    <% if section.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(section.errors.count, 'error') %> prohibited this section from being saved:</h2>

        <ul>
          <% section.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <div class="mb-3">
        <%= form.label(:name, 'Название раздела', class: 'form-label') %>
        <%= form.text_field(:name, class: 'form-control') %>
      </div>

      <div class="mb-3">
        <%= form.label(:description, 'Описание раздела', class: 'form-label') %>
        <%= form.text_field(:description, class: 'form-control') %>
      </div>

      <div class="mb-3">
        <%= form.label(:order, 'Порядковый номер', class: 'form-label') %>
        <%= form.text_field(:order, class: 'form-control') %>
      </div>

      <%= form.submit('Отправить', class: 'btn btn-primary') %>
    </div>
  <% end %>
</div>
